@model App.DAL.Models.TblExecutive

@{
    ViewData["Title"] = "Create Executives";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="box-content">
    <div class="box-heading">
        <div class="box-title">
            <h3 class="mb-35">Add Executive</h3>
        </div>
        <div class="box-breadcrumb">
            <a class="btn btn-dark" asp-action="ExecutiveIndex">Back to List</a>
        </div>
    </div>
    <div class="row">
        <div class="form-control">
            <form class="mt-30 ml-10 mr-10 mb-10" asp-action="CreateGalleryPhoto" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserRoleId" />
                <input type="hidden" asp-for="UserId" />

                <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input asp-for="ExFirstName" class="form-control" required maxlength="50" />
                    <small class="text-muted">------Max 50 character---</small>

                    <span asp-validation-for="ExFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input asp-for="ExLastName" class="form-control" />
                    <small class="text-muted">------Max 50 character---</small>

                    <span asp-validation-for="ExLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Designation" class="control-label"></label>
                    <input asp-for="Designation" class="form-control" />
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Upload Photo</label>
                    <input type="file" name="PhotoUpload" data-member="PhotoUpload" asp-for="PhotoUpload" class="form-control" />
                    <span asp-validation-for="PhotoUpload" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" maxlength="100" />
                    <small class="text-muted">------Max 100 character---</small>

                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Phone number 1</label>
                    <input asp-for="Phone1" class="form-control" />
                    <span asp-validation-for="Phone1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Phone number 2</label>
                    <input asp-for="Phone2" class="form-control" />
                    <span asp-validation-for="Phone2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" required/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="CreateExecutive" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>